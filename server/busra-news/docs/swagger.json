    "definitions": {
        "controllers.AdminUpdateUserRequest": {
            "type": "object",
            "required": [
                "targetUserId"
            ],
            "properties": {
                "newPassword": {
                    "type": "string",
                    "example": "admin123456"
                },
                "role": {
                    "type": "string",
                    "example": "ADMIN"
                },
                "targetUserId": {
                    "type": "string",
                    "example": "65b1a5e2..."
                },
                "verified": {
                    "type": "boolean",
                    "example": true
                }
            }
        },
        "controllers.ChangePasswordRequest": {
            "type": "object",
            "required": [
                "currentPassword",
                "newPassword",
                "retypePassword"
            ],
            "properties": {
                "currentPassword": {
                    "type": "string"
                },
                "newPassword": {
                    "type": "string",
                    "minLength": 6
                },
                "retypePassword": {
                    "type": "string"
                }
            }
        },
        "controllers.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "123456"
                }
            }
        },
        "controllers.ResendOTPRequest": {
            "type": "object",
            "required": [
                "email"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                }
            }
        },
        "controllers.ResetPasswordRequest": {
            "type": "object",
            "required": [
                "email",
                "newPassword",
                "otp"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "newPassword": {
                    "type": "string",
                    "minLength": 6,
                    "example": "newpassword123"
                },
                "otp": {
                    "type": "string",
                    "example": "1234"
                }
            }
        },
        "controllers.UpdateUserRequest": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "example": "Sakib Khan"
                }
            }
        },
        "controllers.VerifyOTPRequest": {
            "type": "object",
            "required": [
                "email",
                "otp"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "otp": {
                    "type": "string",
                    "example": "1234"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type 'Bearer ' followed by your JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}